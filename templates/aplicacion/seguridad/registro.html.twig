<!doctype html>
<html class="fixed">
<head>
    <title>{% block title %}{% endblock %}</title>
    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="HTML5 Admin Template"/>
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light"
          rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap/css/bootstrap.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/font-awesome/css/font-awesome.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/magnific-popup/magnific-popup.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap-datepicker/css/datepicker3.css') }}">

    <!-- Theme CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('stylesheets/theme.css') }}">
    <!-- Skin CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('stylesheets/skins/default.css') }}">
    <!-- Theme Custom CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('stylesheets/theme-custom.css') }}">
    <!-- Head Libs -->
    <script src="{{ asset('vendor/modernizr/modernizr.js') }}"></script>

</head>
<body>
<!-- start: page -->
<section class="body-sign">
    <div class="center-sign">
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>Crear cuenta</h2>
            </div>
            <div class="panel-body">
                {{ notificar()|raw }}
                {{ form_start(form) }}
                <div class="form-group mb-lg">
                    <label for="usuario_identificacionRel">Tipo documento:</label>
                    {{ form_widget(form.identificacionRel) }}
                </div>
                <div class="form-group mb-lg">
                    <label for="usuario_numeroIdentificacion">Número identificación</label>
                    {{ form_widget(form.numeroIdentificacion, { 'attr': {'class':'soloNumeros'} }) }}
                </div>
                <div class="form-group mb-lg">
                    <label for="usuario_correo">Correo</label>
                    {{ form_widget(form.correo) }}
                </div>
                <div class="form-group mb-none">
                    <div class="row">
                        <div class="col-sm-6 mb-lg">
                            <label for="usuario_nombres">Nombre(s)</label>
                            {{ form_widget(form.nombres) }}
                        </div>
                        <div class="col-sm-6 mb-lg">
                            <label for="usuario_apellidos">Apellidos</label>
                            {{ form_widget(form.apellidos) }}
                        </div>
                    </div>
                </div>
                <div class="form-group mb-lg">
                    <label for="txtNitEmpresa">Nit empresa:</label>
                    <input name="txtNitEmpresa" type="number" class="form-control form-control"
                           value="{{ nitEmpresa }}"/>
                    <span class="help-block">
                        Recomendaciones:
                        <ul>
                            <li>El NIT se debe diligenciar sin signos de puntuación y sin dígito de verificación</li>
                        </ul>
                    </span>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-sm-8 mt-2">
                        <div class="checkbox-custom checkbox-default">
                            <input id="chkTerminosCondiciones" name="chkTerminosCondiciones" type="checkbox">
                            <label for="AgreeTerms">Acepto <a href="{{ path('terminoscondiciones') }}"
                                                              title="conocer terminos y condiciones" target="_blank">condiciones
                                    de uso</a></label>
                        </div>
                    </div>
                    <div class="col-xl-12 col-sm-4 text-right mt-2">
                        {{ form_widget(form.btnGuardar) }}
                    </div>
                </div>
                {{ form_end(form) }}
                <span class="mt-lg mb-lg line-thru text-center text-uppercase">
                    <span>o</span>
                </span>
                <p class="text-center"><a href="{{ path('login', {'codigoEmpresa':codigoEmpresa }) }}">Volver a inicio
                        de session</a>
            </div>
        </div>

        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2020. Todos los derechos reservados. Adquirido
            por <a href="www.semantica.com.co">semantica.com.co</a>.</p>
    </div>
</section>
<!-- end: page -->

<!-- Vendor -->
<script src="{{ asset('vendor/jquery/jquery.js') }}"></script>

<script src="{{ asset('vendor/jquery-browser-mobile/jquery.browser.mobile.js') }}"></script>

<script src="{{ asset('vendor/bootstrap/js/bootstrap.js') }}"></script>

<script src="{{ asset('vendor/nanoscroller/nanoscroller.js') }}"></script>

<script src="{{ asset('vendor/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>

<script src="{{ asset('vendor/magnific-popup/magnific-popup.js') }}"></script>

<script src="{{ asset('vendor/jquery-placeholder/jquery.placeholder.js') }}"></script>

<!-- Theme Base, Components and Settings -->
<script src="{{ asset('javascripts/theme.js') }}"></script>

<!-- Theme Custom -->
<script src="{{ asset('javascripts/theme.custom.js') }}"></script>

<!-- Theme Initialization Files -->
<script src="{{ asset('javascripts/theme.init.js') }}"></script>

<script src="{{ asset('javascripts/general.js') }}"></script>

</body>
</html>