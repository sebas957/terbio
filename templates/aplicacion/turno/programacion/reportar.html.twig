<!-- Modal Form -->
{# {{ form_start(form) }} #}
{{ form_start(form, {'action': path('turno_programacion_reportar', {'codigoProgramacion': codigoProgramacion }), 'method': 'POST'}) }}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span
                class="sr-only">Close</span></button>
    <h4 class="modal-title" id="myModalLabel">Reportar programación</h4>
</div>
<div class="modal-body">
    <div class="form-group form-group-sm">
        <div class="row">
            <label class="col-sm-2 control-label">Tipo:</label>
            <div class="col-sm-4">
                <select name="reporteTipo" class="form-control">
                    {% for arrProgramacionReporteTipo in arrProgramacionReporteTipos %}
                        <option value="{{ arrProgramacionReporteTipo.codigoProgramacionReporteTipoPk }}">{{ arrProgramacionReporteTipo.nombre }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <div class="row">
            <label class="col-sm-2 control-label">Desde:</label>
            <div class="col-sm-4">
                {{ form_widget(form.diaDesde) }}
                {{ form_errors(form.diaDesde) }}
            </div>
            <label class="col-sm-2 control-label">Hasta:</label>
            <div class="col-sm-4">
                {{ form_widget(form.diaHasta) }}
                {{ form_errors(form.diaHasta) }}
            </div>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <div class="row">
            <label class="col-sm-2 control-label">Comentario:</label>
            <div class="col-sm-10">
                {{ form_widget(form.comentario, {'attr':{'style':'height: 200px'} }) }}
                <p>Máximo 500 caracteres</p>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    {{ form_widget(form.btnReportar, { 'attr': {'class': 'btn btn-primary'} }) }}
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
</div>
{{ form_end(form) }}