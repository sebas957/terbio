        <h2 class="panel-title">INCAPACIDAD DETALLE</h2>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div class="btn-group btn-group-sm pull-left">
                <a href="{{ path('empleado_incapacidad_lista') }}" class=" btn btn-sm btn-default"
                   title="regresar a la lista"><i class="fa fa-arrow-left"></i> Volver</a>
            </div>
            <div class="btn-group btn-group-sm pull-left">
{#                <a class="btn btn-default btn-sm"#}
