{% extends 'aplicacion/base.html.twig' %}
{% block title %}EMPRESAS{% endblock %}
{% block content %}
    {{ form_start(form) }}
    <div class="row mt-2">
    <section class="panel">
    <div class="panel-heading">
        <div class="panel-title">
            <h2 class="panel-title">RECLAMO NUEVO</h2>
        </div>
    </div>
    <div class="panel-body">
        <div class="row form-group form-group-sm">
            <label class="col-sm-2 control-label">Concepto:</label>
            <div class="col-sm-4">
                <select name="reclamoConcepto" class="form-control">
                    {% for arrReclamoConcepto in arrReclamoConceptos %}
                        {% if  arReclamo %}
                            <option value="{{ arrReclamoConcepto.codigoReclamoConceptoPk }}"  {% if arReclamo.codigoReclamoConceptoFk == arrReclamoConcepto.codigoReclamoConceptoPk %} selected {% endif %} >{{ arrReclamoConcepto.nombre }}</option>
                        {% else %}
                            <option value="{{ arrReclamoConcepto.codigoReclamoConceptoPk }}" >{{ arrReclamoConcepto.nombre }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="row form-group form-group-sm">
            <label class="col-sm-2 control-label">Descripci√≥n:</label>
            <div class="col-sm-10">
                {{ form_widget(form.descripcion) }}
                {{ form_errors(form.descripcion) }}
            </div>
        </div>
        <div class="col-xl-12 col-sm-12 text-right mt-2">
            <a href="{{ path('empleado_reclamo_lista') }}" class=" btn btn-sm btn-default"
               title="regresar a la lista"> Cancelar</a>
            {{ form_widget(form.btnGuardar) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}