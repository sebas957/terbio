{% extends 'aplicacion/baseSinMenu.html.twig' %}
{% block content %}
    <div class="container">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-xl-12">
                <section class="panel">
                    <header class="panel-heading">
                        <h2 class="panel-title">Informaci√≥n estudio</h2>
                    </header>
                    <div class="panel-body">
                        <div class="row form-group form-group-sm">
                            <label class="col-sm-2 control-label">Idioma: <span class="indicardorInputObligatorio">*</span></label>
                            <div class="col-sm-10">
                                {{ form_widget(form.idiomaRel) }}
                                {{ form_errors(form.idiomaRel) }}
                            </div>
                        </div>
                        <div class="row form-group form-group-sm">
                            <label class="col-sm-2 control-label">Nivel: <span class="indicardorInputObligatorio">*</span></label>
                            <div class="col-sm-10">
                                {{ form_widget(form.nivel) }}
                                {{ form_errors(form.nivel) }}
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button class="btn btn-sm btn-default" onclick="window.close()">Cancelar</button>
                                {{ form_widget(form.guardar) }}
                            </div>
                        </div>
                    </footer>
                </section>

            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}