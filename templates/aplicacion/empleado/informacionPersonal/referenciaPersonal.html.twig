{% extends 'aplicacion/baseSinMenu.html.twig' %}
{% block title %}EMPLEADO{% endblock %}
{% block content %}
    {{ form_start(form) }}
    <div class="row mt-2">
        <section class="panel">
            <div class="panel-heading">
                <div class="panel-title">
                    <h2 class="panel-title">INFORMACIÓN REFERENCIA PERSONAL</h2>
                </div>
            </div>
            <div class="panel-body">
                <div class="row form-group form-group-sm">
                    <label class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nombre) }}
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="col-sm-2 control-label">Ciudad:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.ciudadRel) }}
                    </div>
                    <label class="col-sm-2 control-label">Teléfono:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.telefono) }}
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="col-sm-2 control-label">Ocupacion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.ocupacion) }}
                    </div>
                    <label class="col-sm-2 control-label">Dirección:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.direccion) }}
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <div class="col-xl-12 col-sm-12 text-right mt-2">
                        {{ form_widget(form.btnGuardar) }}
                    </div>
                </div>
            </div>
        </section>
    </div>
    {{ form_end(form) }}
{% endblock %}