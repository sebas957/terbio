<!doctype html>

<html class="fixed">
<head>

    <title>{% block title %}{% endblock %}</title>
    {% if registroFijo %}
        <script src='https://www.google.com/recaptcha/api.js?render=6LdldrEeAAAAANY3V0JJ18Y_yFkxSKH0avCQNmWX'>
        </script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('6LdldrEeAAAAANY3V0JJ18Y_yFkxSKH0avCQNmWX', {action: 'formulario'})
                .then(function (token) {
                    var recaptchaResponse = document.getElementById('recaptchaResponse');
                    recaptchaResponse.value = token;
                });
        });
    </script>
    {% endif %}
    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="HTML5 Admin Template"/>
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light"
          rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap/css/bootstrap.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/font-awesome/css/font-awesome.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/magnific-popup/magnific-popup.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap-datepicker/css/datepicker3.css') }}">

    <!-- Theme CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('stylesheets/theme.css') }}">
    <!-- Skin CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('stylesheets/skins/default.css') }}">
    <!-- Theme Custom CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('stylesheets/theme-custom.css') }}">
    <!-- Head Libs -->
    <script src="{{ asset('vendor/modernizr/modernizr.js') }}"></script>

</head>
<body>
<!-- start: page -->
<section class="body-sign">
    <div class="center-sign">
        {% if nombreEmpresa != "" %}
            <section class="panel panel-default" id="panel-1" data-portlet-item="">
                <header class="panel-heading portlet-handler">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-times"></a>
                    </div>
                    <h2 class="panel-title">
                        {{ nombreEmpresa }}
                    </h2>
                </header>
                <div class="panel-body">
                    <div class="row">
                        {% if imagen %}
                            <div class="col-sm-4">
                                <img alt="Embedded Image" src="data:image/png;base64,{{ imagen }}" width="120"
                                     height="120"/>
                            </div>
                            <div class="col-sm-8">
                                <span class="text-justify">
                                    Bienvenido al portal de servicios para terceros de Semantica ERP, puede consultar información de empleados, clientes y proveedor relacionados con la empresa {{ nombreEmpresa }}
                                </span>
                            </div>
                        {% else %}
                            <div class="col-sm-12">
                                <span class="text-justify">
                                    Bienvenido al portal de servicios para terceros de Semantica ERP, puede consultar información de empleados, clientes y proveedor relacionados con la empresa {{ nombreEmpresa }}
                                </span>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </section>
        {% endif %}
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Inicio sesión</h2>
            </div>
            <div class="panel-body">
                {{ notificar()|raw }}
                {% if error %}
                    <div class="alert alert-danger">Usuario o contraseña incorrectos</div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group mb-lg">
                        <label>Usuario</label>
                        <div class="input-group input-group-icon">
                            <input name="_username" type="text" class="form-control input-lg" required/>
                            <span class="input-group-addon">
										<span class="icon icon-lg">
											<i class="fa fa-user"></i>
										</span>
									</span>
                        </div>
                    </div>

                    <div class="form-group mb-lg">
                        <div class="clearfix">
                            <label class="pull-left">Contraseña</label>
                            <a id="urlRecuperarContrasena" href="{{ path('recuperarclave') }}" class="pull-right">¿Olvidó
                                su contraseña?</a>
                        </div>
                        <div class="input-group input-group-icon">
                            <input name="_password" type="password" class="form-control input-lg" required/>
                            <span class="input-group-addon">
										<span class="icon icon-lg">
											<i class="fa fa-lock"></i>
										</span>
									</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-8 text-right">
                            <button type="submit" class="btn btn-primary hidden-xs">Ingresar</button>
                            <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">
                                <Ingresar>Ingresar</Ingresar>
                            </button>
                        </div>
                    </div>

                    <span class="mt-lg mb-lg line-thru text-center text-uppercase">
                        <span>o</span>
                    </span>
                    {% if registroFijo %}
                    <p class="text-center">¿Aún no tiene una cuenta? <a id="urlRegistrarse"
                                                                        href="{{ path('registrofijo') }}">¡Regístrese!</a>
                        {% else %}
                    <p class="text-center">¿Aún no tiene una cuenta? <a id="urlRegistrarse"
                                                                        href="{{ path('registro') }}">¡Regístrese!</a>
                        {% endif %}
                </form>
            </div>
        </div>
        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2020. Todos los derechos reservados. Adquirido
            por <a href="http://www.semantica.com.co/semanticaweb/public/index.php" target="_blank">semantica.com.co</a>.
        </p>
    </div>
</section>
<!-- end: page -->

<!-- Vendor -->
<script src="{{ asset('vendor/jquery/jquery.js') }}"></script>

<script src="{{ asset('vendor/jquery-browser-mobile/jquery.browser.mobile.js') }}"></script>

<script src="{{ asset('vendor/bootstrap/js/bootstrap.js') }}"></script>

<script src="{{ asset('vendor/nanoscroller/nanoscroller.js') }}"></script>

<script src="{{ asset('vendor/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>

<script src="{{ asset('vendor/magnific-popup/magnific-popup.js') }}"></script>

<script src="{{ asset('vendor/jquery-placeholder/jquery.placeholder.js') }}"></script>

<!-- Theme Base, Components and Settings -->
<script src="{{ asset('javascripts/theme.js') }}"></script>

<!-- Theme Custom -->
<script src="{{ asset('javascripts/theme.custom.js') }}"></script>

<!-- Theme Initialization Files -->
<script src="{{ asset('javascripts/theme.init.js') }}"></script>

<script>
    $(() => {
        let urlLogin = "/login"
        let urlActal = window.location.href;
        let extension = urlActal.substring(urlActal.lastIndexOf("/")).toLowerCase();
        if (urlLogin != extension) {
            let urlRegistrarse = document.querySelector("#urlRegistrarse")
            let urlRecuperarContrasena = document.querySelector("#urlRecuperarContrasena")
            let nuevaurlRegistrarse = urlRegistrarse.href + extension
            let nuevaurlRecuperarContrasena = urlRecuperarContrasena.href + extension
            urlRegistrarse.href = nuevaurlRegistrarse
            urlRecuperarContrasena.href = nuevaurlRecuperarContrasena
        }
    })
</script>

</body>
</html>