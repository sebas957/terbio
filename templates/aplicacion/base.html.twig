<script src="{{ asset('javascripts/general.js') }}"></script>

<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $(() => {
        $(".aplicarSelect2").select2({
            width: '100%',
            language: {
                noResults: function () {
                    return "No hay resultado";
                },
                searching: function () {
                    return "Buscando..";
                }
            }
        });
        /**
         * Solucionar el problema del tab index que tiene el select 2.
         */
        $(".aplicarSelect2").on("select2:close", function (e) {
            e.target.focus();
        });
    });
</script>

{% block javascripts %}{% endblock %}

</body>
</html>
