<script src="{{ asset('vendor/gauge/gauge.js') }}"></script>
<script src="{{ asset('vendor/snap-svg/snap.svg.js') }}"></script>
<script src="{{ asset('vendor/liquid-meter/liquid.meter.js') }}"></script>
