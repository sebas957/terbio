{% extends 'aplicacion/base.html.twig' %}
{% block title %}Destinatarios{% endblock %}
{% block content %}
    {{ form_start(form)}}
    <div class="row">
        <h2 class="panel-title">Lista destinatarios</h2>
    </div>
    <div class="row mt-2">
        <section class="panel">
            <header class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-filter"></i> Filtros</h3>
            </header>
            <div class="panel-body">
                <div class="row form-group form-group-sm">
                    <label class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.nombre) }}
                    </div>
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">

                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <div class="col-sm-12">
                        {{ form_widget(form.btnFiltro, { 'attr': {'class': 'btn btn-sm btn-default waves-effect waves-themed pull-right'} }) }}
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="row">
        <div class="col-xl-11 offset-1">
            {{ form_widget(form.btnExcel) }}
            <a class="btn btn-default btn-sm"
               href="javascript:abrirVentana3('{{ path('cliente_transporte_destinatario_importarMasivo') }}', 'Importar', 800, 1250)">Importar</a>
            <a href="{{ path('cliente_transporte_destinatario_nuevo', {'id':0 }) }}" class="btn btn-default btn-sm pull-right">
                Nuevo
            </a>
        </div>
    </div>
    <div class="row">
        <div class="table-responsive mt-2">
            <table class="table table-bordered table-hover tabla-datos-v2">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>NIT</th>
                    <th>NOMBRE</th>
                    <th>DIRECCIÓN</th>
                    <th>TELÉFONO</th>
                    <th>COD</th>
                    <th>CIUDAD</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for arDestinatario in arDestinatarios %}
                    <tr>
                        <td>{{ arDestinatario.codigoDestinatarioPk }}</td>
                        <td>{{ arDestinatario.numeroIdentificacion }}</td>
                        <td>{{ arDestinatario.nombreCorto }}</td>
                        <td>{{ arDestinatario.direccion }}</td>
                        <td>{{ arDestinatario.telefono }}</td>
                        <td>{{ arDestinatario.codigoCiudadFk }}</td>
                        <td>{{ arDestinatario.ciudadNombre }}</td>
                        <td>
                            <a href="{{ path('cliente_transporte_destinatario_nuevo', {'id': arDestinatario.codigoDestinatarioPk }) }}"
                               class="btn btn-xs btn-default" title="editar"><i class="fa fa-pencil"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="col">
        Total {{ arDestinatarios.getTotalItemCount }} registros
    </div>
    <div class="col">
        {{ knp_pagination_render(arDestinatarios) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    <script>
    </script>
{% endblock %}
