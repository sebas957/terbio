                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="col-sm-2 control-label">nombre 2:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formNuevo.nombre2) }}
                        {{ form_errors(formNuevo.nombre2) }}
