                <div class="row form-group form-group-sm">
                    <label class="col-sm-2 control-label">Correo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formNuevo.correo) }}
                        {{ form_errors(formNuevo.correo) }}
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="col-sm-2 control-label">Teléfono:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formNuevo.telefono) }}
                        {{ form_errors(formNuevo.telefono) }}
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="col-sm-2 control-label">Celular:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formNuevo.celular) }}
                        {{ form_errors(formNuevo.celular) }}
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="col-sm-2 control-label">Ciudad:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formNuevo.codigoCiudadFk) }}
                        {{ form_errors(formNuevo.codigoCiudadFk) }}
                    </div>
                </div>
                <div class="col-xl-12 col-sm-12 text-right mt-2">
                    {{ form_widget(formNuevo.btnGuardar) }}
                </div>
            </div>
        </section>
    </div>
    {{ form_rest(formNuevo) }}
    {{ form_end(formNuevo) }}
{% endblock %}