{% extends 'aplicacion/base.html.twig' %}
{% block title %}USUARIO {% endblock %}
{% block content %}
    {{ form_start(form) }}
    <div class="row mt-5">
        <div class="col-md-4 col-lg-3">
            <section class="panel">
                <div class="panel-body">
                    <div class="thumb-info mb-md">
                        <img src="{{ asset('img/!logged-user.jpg') }}" class="rounded img-responsive" alt="John Doe">
                        <div class="thumb-info-title">
                            <span class="thumb-info-inner">{{ app.user.nombres }}</span>
                            <span class="thumb-info-type">{{ app.user.codigoIdentificacionFk }} - {{ app.user.numeroIdentificacion }}</span>
                        </div>
                    </div>

                    <div class="widget-toggle-expand mb-md">
                        <div class="widget-header">
                            <h6>Perfil completo</h6>
                        </div>
                        <div class="widget-content-collapsed">
                            <div class="progress progress-xs light">
                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0"
                                     aria-valuemax="100" style="width: 100%;">
                                    100%
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>

        </div>
        <div class="col-md-8 col-lg-9">
            <section class="panel">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h2 class="panel-title">USUARIO</h2>
                    </div>
                </div>
                <div class="panel-body">
                    <h4 class="mb-xlg">Personal Information</h4>
                    <div class="row form-group form-group-sm">
                        <label class="col-sm-2 control-label">Tipo documento:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.identificacionRel) }}
                            {{ form_errors(form.identificacionRel) }}
                        </div>
                        <label class="col-sm-2 control-label">Número identificación:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.numeroIdentificacion) }}
                            {{ form_errors(form.numeroIdentificacion) }}
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="col-sm-2 control-label">Nombre(s):</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.nombres) }}
                            {{ form_errors(form.nombres) }}

                        </div>
                        <label class="col-sm-2 control-label">Apellidos:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.apellidos) }}
                            {{ form_errors(form.apellidos) }}
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="col-sm-2 control-label">Correo:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.correo) }}
                            {{ form_errors(form.correo) }}
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <div class="col-xl-12 col-sm-12 text-right mt-2">
                            {{ form_widget(form.btnGuardar) }}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}